<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_gravity="center"
        >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="0.8"
           android:layout_marginLeft="20dp"
           android:layout_gravity="center|left"
           android:gravity="center|left">
           <CheckBox
               android:id="@+id/sell_check_box"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:visibility="gone"/>
           <TextView
               android:id="@+id/pay_ticket_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="成人票"/>
           <TextView
               android:id="@+id/pay_ticket_id"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:visibility="gone"/>
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center|left"
            android:gravity="center|left">
            <TextView
                android:id="@+id/pay_ticket_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥100"/>
            <TextView
                android:id="@+id/pay_ticket_realprice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>
        </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          android:layout_gravity="center"
          android:gravity="center"
          android:layout_weight="1">
          <ImageView
              android:id="@+id/pay_ticket_reduce"
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:src="@drawable/ic_remove"
              android:layout_weight="1"/>
          <TextView
              android:id="@+id/pay_ticket_number"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:layout_gravity="center"
              android:gravity="center"
              android:text="0"/>
          <ImageView
              android:id="@+id/pay_ticket_plus"
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:src="@drawable/ic_add"
              android:layout_weight="1"/>
      </LinearLayout>

    </LinearLayout>
</LinearLayout>